{
  "manifest_version": 2,
  "name": "SEEN Sales Video",
  "short_name": "SEEN Sales Video",
  "description": "SEEN Sales Video",
  "version": "1.0.0",
  "permissions": ["activeTab", "webRequest"],
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*",
        "*://inbox.google.com/*",
        "*://api.seen.io/*"
      ],
      "js": ["content.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "page": "background.html"
  },
  "icons": {
    "128": "media/128.png"
  },
  "web_accessible_resources": ["*"],
  "externally_connectable": {
    "matches": []
  },

  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  }
}
